<h1>画像投稿フォーム</h1>
  <%= form_with model: @post_image do |f| %>
    <h4>画像</h4>
      <!--accept: "image/*"で，画像ファイルしか保存できないようにした-->
      <%= f.file_field :image, accept: "image/*" %>
    <h4>ショップ名</h4>
      <%= f.text_field :shop_name%>
    <h4>説明</h4>
      <%= f.text_area :caption %>
    <!--自動でPostImageモデルのcreateに投稿してくれる  -->
    <%= f.submit '投稿' %>
  <% end %>
